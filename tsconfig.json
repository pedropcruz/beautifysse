{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "~/types/*": ["./types/*"],
      "hub:db": ["./types/hub.d.ts"]
    }
  },
  "include": [
    ".nuxt/nuxt.d.ts",
    ".nuxt/hub/**/*",
    "app/**/*",
    "server/**/*",
    "shared/**/*",
    "utils/**/*",
    "types/**/*",
    "*.d.ts"
  ]
}
