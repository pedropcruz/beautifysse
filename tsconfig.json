{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "@/*": [
        "./app/*"
      ],
      "~/types/*": [
        "./types/*"
      ]
    }
  },
  "include": [
    ".nuxt/nuxt.d.ts",
    "app /**/*",
    "server /**/*",
    "shared /**/*",
    "*.d.ts"
  ]
}
